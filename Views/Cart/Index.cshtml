@model IReadOnlyList<MagazineOnline.Api.ViewModels.CartItemViewModel>
@{
    ViewData["Title"] = "Cosul meu";
}

<h1 class="h3 mb-4">Cosul meu</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">Cosul este gol. Adauga produse din pagina principala.</div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Produs</th>
                        <th>Pret</th>
                        <th>Cantitate</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <img src="@item.ImageUrl" class="cart-thumb" alt="@item.Name" />
                                    <span>@item.Name</span>
                                </div>
                            </td>
                            <td>@item.UnitPrice.ToString("0.00") lei</td>
                            <td>@item.Quantity</td>
                            <td>@item.Total.ToString("0.00") lei</td>
                            <td>
                                <form asp-action="Remove" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button class="btn btn-sm btn-outline-danger">Sterge</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between align-items-center">
        <form asp-action="Clear" method="post">
            @Html.AntiForgeryToken()
            <button class="btn btn-outline-secondary">Goleste cosul</button>
        </form>
        <h2 class="h4 mb-0">Total: @(((decimal)ViewBag.GrandTotal).ToString("0.00")) lei</h2>
    </div>
}
