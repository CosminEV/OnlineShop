<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4 shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Online Shop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Index">Cos</a></li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Create">Adauga produs</a></li>
                    }
                </ul>
                <div class="d-flex gap-2">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="text-light align-self-center">Salut, @User.Identity.Name</span>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-outline-light">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="btn btn-warning" asp-controller="Account" asp-action="Register">Register</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="container pb-4">
        @if (TempData["Success"] is string success)
        {
            <div class="alert alert-success">@success</div>
        }

        @if (TempData["Error"] is string error)
        {
            <div class="alert alert-danger">@error</div>
        }

        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
