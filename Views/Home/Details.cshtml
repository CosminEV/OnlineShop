@model MagazineOnline.Api.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="row g-4">
    <div class="col-lg-6">
        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded-4 shadow-sm details-image" />
    </div>
    <div class="col-lg-6">
        <span class="badge text-bg-light mb-2">@Model.Category</span>
        <h1 class="h2">@Model.Name</h1>
        <p class="text-muted">@Model.Description</p>
        <h2 class="h3 text-primary mb-3">@Model.Price.ToString("0.00") lei</h2>
        <p><strong>Stoc disponibil:</strong> @Model.Stock buc</p>

        <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex gap-2 align-items-center">
            @Html.AntiForgeryToken()
            <input type="hidden" name="productId" value="@Model.Id" />
            <input type="number" class="form-control w-auto" name="quantity" value="1" min="1" />
            <button class="btn btn-primary">Adauga in cos</button>
        </form>
    </div>
</div>
