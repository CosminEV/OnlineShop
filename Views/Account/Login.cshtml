@model MagazineOnline.Api.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="h4 mb-3">Autentificare</h2>
                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <button class="btn btn-primary w-100">Login</button>
                </form>

                <hr>
                <p class="text-muted">Sau continua cu:</p>

                <div class="d-grid gap-2">
                    <form asp-action="ExternalLogin" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="provider" value="Google" />
                        <button class="btn btn-outline-danger w-100">Google</button>
                    </form>
                    <form asp-action="ExternalLogin" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="provider" value="Facebook" />
                        <button class="btn btn-outline-primary w-100">Facebook</button>
                    </form>
                    <form asp-action="ExternalLogin" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="provider" value="GitHub" />
                        <button class="btn btn-outline-dark w-100">GitHub</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
